<%= @params %>
<div class="search-form">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <%= simple_form_for :user, url: user_filter_users_map_path do |f| %>
        <div class="form-inputs">
          <%= f.input :categories, collection: ['Art & Culture', 'Community & Envoirnment', 'Entertainment','Fitness & Sports', 'Food & Drink',  'Hobbies & Passions', 'Travel & Adventure' ],
                      label: 'What to do',
                      prompt: "Select a category (Max 3)",
                      required: false,
                      input_html: { multiple: true, data: {controller: "tom-select", tom_select_options_value: {tags: true}}, class: "form-category-select form-control"} %>
          <%= f.input :gender, collection: ['Female', 'Male'], label: 'Looking for', required: false,
                      prompt: 'Women',
                      input_html: { data: {controller: "tom-select", tom_select_options_value: {tags: true}}, class: "form-category-select form-control"} %>
          <%= f.input :address, placeholder: "District e.g. Hackney", label: "Meetup Location", required: false  %>
        </div>
        <div class="form-actions">
          <%= f.submit "Search", class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
